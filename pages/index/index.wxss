.lives {
  background-color: #eef1f3; 
}

.lives .live {
  padding-top: 40rpx;
}

.live .datetime {
  font-size: 28rpx;
  margin-left: 32rpx;
  margin-bottom: 24rpx;
}

.live .game {
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  background-color: white;  
}

.live .game .game-meta {
  width: 180rpx;
}

.live .game .game-meta .game-time {
  margin-bottom: 10rpx;
  font-size: 26rpx;
  font-weight: bolder;
}

.live .game .game-meta .game-name {
  font-size: 24rpx;
  /* white-space: nowrap; */
  color: #94999a;
}

.live .game .game-teams-keywords {
  flex-grow: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.live .game .game-teams {
  margin-left: 16rpx;
}

.live .game .game-team {
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.live .game .game-team .logo {
  width: 54rpx;
  height: 54rpx;
}

.live .game .game-team .name {
  margin-left: 30rpx;
  font-size: 32rpx;
}

.live .game .game-keywords {
  font-size: 22rpx;
  color: #94999a;
  text-align: right;
}