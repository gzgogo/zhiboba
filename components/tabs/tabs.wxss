.tabs {
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.tab-item {
    width: 30%; 
    color:#434343;
}
.tab-item.active{
    color:#F65959;
    border-bottom: 4rpx solid #F65959;
}